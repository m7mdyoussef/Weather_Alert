<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECECEC">


    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="@string/C"
        android:textColor="#232222"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/toggleButtonGroupUnits"
        app:layout_constraintTop_toBottomOf="@+id/toggleButtonGroupUnits" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="@string/mpersec"
        android:textColor="#232222"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textView21"
        app:layout_constraintStart_toStartOf="@+id/textView21"
        app:layout_constraintTop_toBottomOf="@+id/textView21" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="@string/mileperhr"
        android:textColor="#232222"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textView22"
        app:layout_constraintStart_toStartOf="@+id/textView22"
        app:layout_constraintTop_toBottomOf="@+id/textView21" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="45dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="@string/F"
        android:textColor="#232222"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/toggleButtonGroupUnits"
        app:layout_constraintTop_toBottomOf="@+id/toggleButtonGroupUnits" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="serif"
        android:text="@string/change_units"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/language"
        app:layout_constraintStart_toStartOf="@+id/language"
        app:layout_constraintTop_toBottomOf="@+id/toggleButtonGroupLanguage" />

    <TextView
        android:id="@+id/language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="134dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="134dp"
        android:fontFamily="serif"
        android:text="@string/change_language"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView18" />

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/toggleButtonGroupLanguage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/language"
        app:layout_constraintStart_toStartOf="@+id/language"
        app:layout_constraintTop_toBottomOf="@+id/language"
        app:singleSelection="true">


        <Button
            android:id="@+id/arabicBtn"
            style="@style/ToggleButtonWithIconOnly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_egypt_"
            app:iconTint="@android:color/transparent"
            app:iconTintMode="screen"
            tools:layout_editor_absoluteX="173dp"
            tools:layout_editor_absoluteY="251dp" />

        <Button
            android:id="@+id/englishBtn"
            style="@style/ToggleButtonWithIconOnly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_united_kingdom"
            app:iconTint="#00FFFFFF"
            app:iconTintMode="add"
            tools:layout_editor_absoluteX="166dp"
            tools:layout_editor_absoluteY="340dp" />


    </com.google.android.material.button.MaterialButtonToggleGroup>


    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/toggleButtonGroupUnits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:singleSelection="true">


        <Button
            android:id="@+id/btnMetric"
            style="@style/ToggleButtonWithIconOnly"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="@string/metric_Choice"
            app:iconTint="#00FFFFFF"
            app:iconTintMode="src_atop"
            app:rippleColor="#000000"
            tools:layout_editor_absoluteX="173dp"
            tools:layout_editor_absoluteY="251dp" />

        <Button
            android:id="@+id/btnImperial"
            style="@style/ToggleButtonWithIconOnly"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="@string/imperial_Choice"
            app:iconTint="#00FFFFFF"
            app:iconTintMode="src_atop"
            app:rippleColor="#000000"
            tools:layout_editor_absoluteX="166dp"
            tools:layout_editor_absoluteY="340dp" />


    </com.google.android.material.button.MaterialButtonToggleGroup>

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="serif"
        android:text="@string/settings"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view3"
        android:layout_width="120dp"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:background="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView18" />


    <com.sanojpunchihewa.glowbutton.GlowButton
        android:id="@+id/addAlarmBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:padding="20dp"
        android:text="@string/save"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:buttonColor="@color/colorPrimaryDark"
        app:cornerRadius="10dp"
        app:glowColor="@color/purpul"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toggleButtonGroupUnits"
        app:pressedGlowSize="20dp"
        app:unpressedGlowSize="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>